<script type="text/ng-template" id="actual-temp.html">
    <h3>Temps</h3>
    <ul>
        <div ng-repeat="t in temps" class="row" style="display: flex; align-items: baseline;">
            <div class="col-xs-5">
                <span class="displa" style="font-size: 1.5em">{{t.name}}</span>
                <!--<span class="text-muted">({{t.id}})</span>-->
            </div>
            <div class="col-xs-2"><span class="text-danger" ng-hide="t.crcCorrect">CRC ERROR</span></div>
            <div class="col-xs-5" style="text-align: right">
                <span class="displa" style="font-size: 2em">{{t.temp.toFixed(1)}} C</span>
            </div>
        </div>
    </ul>
</script>

<script type="text/ng-template" id="temp-history.html">

    <div style="position: relative; overflow: hidden">
        <div style=" margin: 20px 0 10px 0">
            <select class="form-control" style="float: right; width:auto; margin:10px 0px 10px 10px;"
                    ng-model="selectedHistory" ng-options="h.text for h in listsOfHistories"
                    ng-change="loadData()">
            </select>
        </div>
    </div>
    <div id="plot" style="width: 100%; height: 400px;"></div>

</script>

<script type="text/ng-template" id="temp-compare-history.html">

    <div style="position: relative; overflow: hidden">
        <div style=" margin: 20px 0 10px 0">
            <select class="form-control" style="float: right; width:auto; margin:10px 0px 10px 10px;"
                    ng-model="SelectedB" ng-options="h.text for h in ListB"
                    ng-change="loadData()">
            </select>
            <select class="form-control" style="float: right; width:auto; margin:10px 0px 10px 10px;"
                    ng-model="SelectedA" ng-options="h.text for h in ListA"
                    ng-change="loadData()">
            </select>
        </div>
    </div>

    <div id="plot" style="width: 100%; height: 400px;"></div>

</script>